// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// mcr.microsoft.com/devcontainers/dotnet:1-9.0-bookworm
	"image": "mcr.microsoft.com/dotnet/sdk:9.0",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools:1": {},
		"ghcr.io/devcontainers-extra/features/angular-cli:2": {}
	},
	"workspaceFolder": "/workspaces/Analyze/App",
	"customizations": {
		"vscode": {
			"extensions": [
				"Angular.ng-template", // Angular
				"ms-azuretools.vscode-azurefunctions", // Azure Function
				"ms-dotnettools.csdevkit" // VS Code Solution Explorer
			]
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [7138, 7138, 4200, 4200],
	"portsAttributes": {
		"7138": {
			"visibility": "public"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	// Moved to features npm install -g @angular/cli && 
	// Moved to features npm i -g azure-functions-core-tools@4 &&
	"postCreateCommand": "npm ci --prefix App.Web"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
